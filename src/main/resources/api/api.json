{
  "openapi": "3.0.1",
  "info": {
    "title": "edge-guard",
    "description": "A sample API",
    "contact": {
      "name": "ifancy-ariaratnam"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://edge-guard:8080/api/v1"
    }
  ],
  "tags": [
    {
      "name": "IncidentManagement",
      "description": "Incident Management tag"
    }
  ],
  "paths": {
    "/alert": {
      "post": {
        "tags": [
          "IncidentManagement"
        ],
        "description": "Alert api returns alert model",
        "operationId": "create-alert",
        "responses": {
          "200": {
            "description": "Alert is working",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AlertModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AlertModel": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}